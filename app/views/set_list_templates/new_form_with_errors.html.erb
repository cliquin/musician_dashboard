<% if @set_list.present? %>
  <% if @set_list.errors.any? %>
    <% @set_list.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new set list
</h1>


<hr>

<form action="/create_set_list" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @set_list.title %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create set list
  </button>
</form>

<hr>

<a href="/set_lists">
  Go back
</a>
