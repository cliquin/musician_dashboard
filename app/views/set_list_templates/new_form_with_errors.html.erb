<!-- Validation failure messages -->
<% if @set_list.present? %>
  <% if @set_list.errors.any? %>
    <% @set_list.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new set list
</h1>


<hr>

<!-- Form set_list start -->
<form action="/create_set_list" method="post">
<!-- Form set_list end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @set_list.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create set list
  </button>
</form>

<hr>

<a href="/set_lists">
  Go back
</a>
