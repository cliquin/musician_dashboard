<% if @set_list.errors.any? %>
  <% @set_list.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit set list #<%= @set_list.id %>
</h1>

<hr>

<form action="/update_set_list/<%= @set_list.id %>" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @set_list.title %>">
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update set list
  </button>
</form>

<hr>

<a href="/set_lists">
  Go back
</a>
