<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All set lists
    </h1>

    <a href="/set_lists/new" class="btn btn-block btn-outline-secondary">
      Add a new set list
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @set_lists.each do |set_list| %>
      <tr>
        <!-- Display set_list.id start -->
        <td>
          <%= set_list.id %>
        </td>
        <!-- Display set_list.id end -->

        <!-- Display set_list.title start -->
        <td>
          <%= set_list.title %>
        </td>
        <!-- Display set_list.title end -->

        <!-- Display set_list.user_id start -->
        <td>
          <% if set_list.user.present? %>
            <a href="/users/<%= set_list.user.id %>">
              <%= set_list.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display set_list.user_id end -->

        <!-- Display set_list.created_at start -->
        <td>
          <%= time_ago_in_words(set_list.created_at) %> ago
        </td>
        <!-- Display set_list.created_at end -->

        <!-- Display set_list.updated_at start -->
        <td>
          <%= time_ago_in_words(set_list.updated_at) %> ago
        </td>
        <!-- Display set_list.updated_at end -->

        <td>
          <a href="/set_lists/<%= set_list.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @set_lists, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
