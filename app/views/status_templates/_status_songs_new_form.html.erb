<!-- Form song start -->
<form action="/create_song_from_status" method="post">
<!-- Form song end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @song.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for status_id start -->
  <!-- Input for status_id start -->
  <input type="hidden" name="status_id" value="<%= @status.id %>">
  <!-- Input for status_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create song
  </button>
</form>
