<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Songs

    <a data-toggle="collapse" href="#status_songs_new_form">
      Add song
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @status.songs.each do |song| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/songs/<%= song.id %>">
          <%= song.title %>
        </a>

        <%if current_user == song.user %>
          <a href="/delete_song_from_status/<%= song.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="status_songs_new_form">
        <%= render partial: "status_templates/status_songs_new_form" %>
      </div>
    </div>

  </ul>
</div>
