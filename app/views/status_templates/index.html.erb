<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All statuses
    </h1>

    <a href="/statuses/new" class="btn btn-block btn-outline-secondary">
      Add a new status
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "status_templates/statuses_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @statuses.each do |status| %>
      <tr>
        <td>
          <%= status.id %>
        </td>

        <td>
          <%= status.name %>
        </td>

        <td>
          <% if status.user.present? %>
            <a href="/users/<%= status.user.id %>">
              <%= status.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(status.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(status.updated_at) %> ago
        </td>

        <td>
          <a href="/statuses/<%= status.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @statuses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
