<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All set list songs
    </h1>

    <a href="/set_list_songs/new" class="btn btn-block btn-outline-secondary">
      Add a new set list song
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "set_list_song_templates/set_list_songs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Song
        </th>

        <th>
          Set list
        </th>

        <th>
          Position
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @set_list_songs.each do |set_list_song| %>
      <tr>
        <td>
          <%= set_list_song.id %>
        </td>

        <td>
          <% if set_list_song.song.present? %>
            <a href="/songs/<%= set_list_song.song.id %>">
              <%= set_list_song.song.title %>
            </a>
          <% end %>
        </td>

        <td>
          <% if set_list_song.set_list.present? %>
            <a href="/set_lists/<%= set_list_song.set_list.id %>">
              <%= set_list_song.set_list.title %>
            </a>
          <% end %>
        </td>

        <td>
          <%= set_list_song.position %>
        </td>

        <td>
          <%= time_ago_in_words(set_list_song.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(set_list_song.updated_at) %> ago
        </td>

        <td>
          <a href="/set_list_songs/<%= set_list_song.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @set_list_songs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
