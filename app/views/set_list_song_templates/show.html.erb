<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Set list song #<%= @set_list_song.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/set_list_songs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/set_list_songs/<%= @set_list_song.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit set list song
        </a>
      </div>

      <div class="col">
        <a href="/delete_set_list_song/<%= @set_list_song.id %>" class="btn btn-block btn-outline-secondary">
          Delete set list song
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Song
      </dt>
      <dd>
        <% if @set_list_song.song.present? %>
          <a href="/songs/<%= @set_list_song.song_id %>">
            <%= @set_list_song.song.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Set list
      </dt>
      <dd>
        <% if @set_list_song.set_list.present? %>
          <a href="/set_lists/<%= @set_list_song.set_list_id %>">
            <%= @set_list_song.set_list.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Position
      </dt>
      <dd>
        <%= @set_list_song.position %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@set_list_song.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@set_list_song.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

