<% if @set_list_song.errors.any? %>
  <% @set_list_song.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit set list song #<%= @set_list_song.id %>
</h1>

<hr>

<form action="/update_set_list_song/<%= @set_list_song.id %>" method="post">

  <div class="form-group">
    <label for="song_id">
      Song
    </label>

    <%= select_tag(:song_id, options_from_collection_for_select(Song.all, :id, :title, @set_list_song.song_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="set_list_id">
      Set list
    </label>

    <%= select_tag(:set_list_id, options_from_collection_for_select(SetList.all, :id, :title, @set_list_song.set_list_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="position">
      Position
    </label>

    <input type="text" id="position" name="position" class="form-control" value="<%= @set_list_song.position %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update set list song
  </button>
</form>

<hr>

<a href="/set_list_songs">
  Go back
</a>
