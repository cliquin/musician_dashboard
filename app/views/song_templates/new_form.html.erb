<h1>
  Add a new song
</h1>


<hr>

<!-- Form song start -->
<form action="/create_song" method="post">
<!-- Form song end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for status_id start -->
  <div class="form-group">
    <label for="status_id">
      Status
    </label>

    <!-- Input for status_id start -->
    <%= select_tag(:status_id, options_from_collection_for_select(Status.all, :id, :name, @song.status_id), :class => "form-control") %>
    <!-- Input for status_id end -->
  </div>
  <!-- Label and input for status_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create song
  </button>
</form>

<hr>

<a href="/songs">
  Go back
</a>
