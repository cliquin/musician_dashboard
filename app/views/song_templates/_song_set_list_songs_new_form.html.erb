<form action="/create_set_list_song_from_song" method="post">

  <input type="hidden" name="song_id" value="<%= @song.id %>">

  <div class="form-group">
    <label for="set_list_id">
      Set list
    </label>

    <%= select_tag(:set_list_id, options_from_collection_for_select(SetList.all, :id, :title, @set_list_song.set_list_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="position">
      Position
    </label>

    <input type="text" id="position" name="position" class="form-control" value="<%= @set_list_song.position %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create set list song
  </button>
</form>
